#:kivy 1.0.9

<SmileWidget1>
    size: 100, 100
    source: 'images/1_smile.png'
    size: 100, 100 / self.image_ratio

<SmileWidget2>
    size: 100, 100
    source: 'images/2_smile.png'
    size: 100, 100 / self.image_ratio

<SmileWidget3>
    size: 100, 100
    source: 'images/3_smile.png'
    size: 100, 100 / self.image_ratio

<SmileWidget4>
    size: 100, 100
    source: 'images/4_smile.png'
    size: 100, 100 / self.image_ratio

<SmileWidget5>
    size: 100, 100
    source: 'images/5_smile.png'
    size: 100, 100 / self.image_ratio



<ForgeantRootWidget>
    Label:
        font_size: 50
        center_x: root.width / 2
        top: root.top - 50
        text: "How are you feeling today?"
        color: 0,0,0,1
        font_name: 'fonts/IndieFlower.ttf'

    SmileWidget1:
        pos: ((root.width / 5) * 0) + (root.width / 28) , root.top - 300

    SmileWidget2:
        pos: ((root.width / 5) * 1) + (root.width / 28) , root.top - 300

    SmileWidget3:
        pos: ((root.width / 5) * 2) + (root.width / 28) , root.top - 300

    SmileWidget4:
        pos: ((root.width / 5) * 3) + (root.width / 28) , root.top - 300

    SmileWidget5:
        pos: ((root.width / 5) * 4) + (root.width / 28), root.top - 300



<LblTxt@BoxLayout>:
    orientation: 'horizontal'
    lblTxtIn: 'default'
    theTxt: iAmTxt
    Label:
        text: root.lblTxtIn
    TextInput:
        id: iAmTxt
        text: 'txt'

<MyLayout@BoxLayout>:
    orientation: 'vertical'

    LblTxt:
        id: lt0
        lblTxtIn: 'LblTxtInput0'
        color: 100,100,100,1

    LblTxt:
        id: lt1
        lblTxtIn: 'LblTxtInput1'
        color: 100,100,100,1

    LblTxt:
        id: lt2
        lblTxtIn: 'LblTxtInput2'
        color: 100,100,100,1


    Button:
        text: 'print LblTxtInput [0, 1, 2]'
        on_release: print (lt0.theTxt.text, lt1.theTxt.text, lt2.theTxt.text)

MyLayout
