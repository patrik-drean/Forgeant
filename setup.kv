#:kivy 1.0.9
<CustomDropDown>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')

<LblTxt@BoxLayout>:
    orientation: 'horizontal'
    lblTxtIn: 'default'
    theTxt: iAmTxt
    Label:
        text: root.lblTxtIn
        color: 100,100,100,1
    TextInput:
        id: iAmTxt
        text: 'txt'

<MyLayout@BoxLayout>:
    orientation: 'vertical'

    LblTxt:
        id: lt0
        lblTxtIn: 'LblTxtInput0'
        color: 1,0,200,1

    LblTxt:
        id: lt1
        lblTxtIn: 'LblTxtInput1'
        text: 'yo'

    LblTxt:
        id: lt2
        lblTxtIn: 'LblTxtInput2'
        color: 100,100,100,1


    Button:
        text: 'print LblTxtInput [0, 1, 2]'
        on_release: print (lt0.theTxt.text, lt1.theTxt.text, lt2.theTxt.text)
    CustomDropDown:

MyLayout
